<?xml version="1.0" encoding="utf-8"?>
<com.carlodelledonne.tarbula_10.services.ActivatedRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/element_balance_name_background"
            android:paddingTop="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="13dp"
            android:paddingBottom="15dp">

            <TextView android:id="@+id/titolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="prova titolo"
                android:textSize="18sp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:drawableStart="@drawable/ic_person_black_18dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"/>

</com.carlodelledonne.tarbula_10.services.ActivatedRelativeLayout>