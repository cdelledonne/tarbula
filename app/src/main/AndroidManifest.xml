<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carlodelledonne.tarbula_10" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".services.AppController"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TarbulaTheme" >
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainTabActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".MainTabActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreditsActivity"
            android:label="@string/credits_activity"
            android:parentActivityName=".MainTabActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
